@model FlatFXWebClient.ViewModels.InviteUserToCompanyViewModel
@{
    ViewBag.Title = "Invite Co-Worker to Company";
    Layout = "~/Views/Manage/UserManageLayout.cshtml";
}

<h2>@FlatFXResources.Resources.InviteCoWorker1</h2>
<span class="green">@FlatFXResources.Resources.InviteCoWorker2</span>

@using (Html.BeginForm("InviteUserToCompany", "Companies", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.CompanyId)
    <div class="form-group">
        @Html.LabelFor(model => model.CoWorkerEmail, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-4">
            @Html.EditorFor(model => model.CoWorkerEmail, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CoWorkerEmail, "", new { @class = "text-danger" })
        </div>
        <input type="submit" value="Invite Co-Worker" class="btn btn-primary btn-sm" />
        <span class="text-success">@TempData["Result"]</span>
        <span class="text-danger">@TempData["ErrorResult"]</span>
    </div>
}
