@model FlatFXWebClient.ViewModels.CompanyUserAllEntitiesModelView
<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">@FlatFXResources.Resources.CreateNewCompany</h3>
    </div>
    <div class="panel-body">
        <div class="form-group">
            @Html.LabelFor(m => m.companyVM.CompanyName, htmlAttributes: new { @class = "control-label col-sm-2 required" })
            <div class="col-sm-4">
                @Html.TextBoxFor(m => m.companyVM.CompanyName, new { @class = "form-control", @placeholder = Html.DisplayNameFor(x => x.companyVM.CompanyName) })
                @Html.ValidationMessageFor(m => m.companyVM.CompanyName, "", new { @class = "text-danger" })
            </div>
            @Html.LabelFor(m => m.companyVM.CompanyFullName, htmlAttributes: new { @class = "control-label col-sm-2" })
            <div class="col-sm-4">
                @Html.TextBoxFor(m => m.companyVM.CompanyFullName, new { @class = "form-control", @placeholder = Html.DisplayNameFor(x => x.companyVM.CompanyFullName) })
                @Html.ValidationMessageFor(m => m.companyVM.CompanyFullName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.companyVM.CustomerType, htmlAttributes: new { @class = "control-label col-sm-2" })
            <div class="col-sm-4">
                @Html.EnumDropDownListFor(m => m.companyVM.CustomerType, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>
        
        @{
            Model.ShowContactDetailsForUser = false;
            @Html.Partial("RegisterContactDetails", Model)
        }
    </div>
</div>
