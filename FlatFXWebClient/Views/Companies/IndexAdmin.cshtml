@model IEnumerable<FlatFXCore.Model.Data.Company>
@{
    Layout = "~/Views/Manage/AdminManageLayout.cshtml";
}

<div class="form-horizontal">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">Company List</h3>
        </div>
        <div class="panel-body">
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.CompanyShortName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CompanyFullName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsActive)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsDepositValid)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsSignOnRegistrationAgreement)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CompanyVolumePerYearUSD)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ContactDetails.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ContactDetails.OfficePhone)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ContactDetails.MobilePhone)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CompanyShortName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CompanyFullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsActive)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsDepositValid)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsSignOnRegistrationAgreement)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CompanyVolumePerYearUSD)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ContactDetails.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ContactDetails.OfficePhone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ContactDetails.MobilePhone)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.CompanyId })
                            @Html.ActionLink("Delete", "Delete", new { id = item.CompanyId })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>