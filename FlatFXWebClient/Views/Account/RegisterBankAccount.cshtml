@using FlatFXCore.Model.Data
@model FlatFXWebClient.ViewModels.CompanyUserAllEntitiesModelView
<div class="panel panel-danger">
    <div class="panel-heading">
        <h4 class="panel-title">@FlatFXResources.Resources.BankAccountDetails</h4>
    </div>
    <div class="panel-body">
        <div class="form-group">
            @Html.LabelFor(m => m.providerAccountVM.ProviderId, htmlAttributes: new { @class = "control-label col-sm-2 required" })
            <div class="col-sm-4">
                @Html.DropDownListFor(m => m.providerAccountVM.ProviderId, new SelectList(Provider.BankList, "Key", "Value"), htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.providerAccountVM.ProviderId, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.providerAccountVM.BranchNumber, htmlAttributes: new { @class = "control-label col-sm-2 required" })
            <div class="col-sm-4">
                @Html.TextBoxFor(m => m.providerAccountVM.BranchNumber, new { @class = "form-control", @placeholder = Html.DisplayNameFor(x => x.providerAccountVM.BranchNumber) })
                @Html.ValidationMessageFor(m => m.providerAccountVM.BranchNumber, "", new { @class = "text-danger" })
            </div>

            @Html.LabelFor(m => m.providerAccountVM.AccountNumber, htmlAttributes: new { @class = "control-label col-sm-2 required" })
            <div class="col-sm-4">
                @Html.TextBoxFor(m => m.providerAccountVM.AccountNumber, new { @class = "form-control", @placeholder = Html.DisplayNameFor(x => x.providerAccountVM.AccountNumber) })
                @Html.ValidationMessageFor(m => m.providerAccountVM.AccountNumber, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.providerAccountVM.IBAN, htmlAttributes: new { @class = "control-label col-sm-2 required" })
            <div class="col-sm-4">
                @Html.TextBoxFor(m => m.providerAccountVM.IBAN, new { @class = "form-control", @placeholder = Html.DisplayNameFor(x => x.providerAccountVM.IBAN) })
                @Html.ValidationMessageFor(m => m.providerAccountVM.IBAN, "", new { @class = "text-danger" })
            </div>
            @Html.LabelFor(m => m.providerAccountVM.SWIFT, htmlAttributes: new { @class = "control-label col-sm-2 required" })
            <div class="col-sm-4">
                @Html.TextBoxFor(m => m.providerAccountVM.SWIFT, new { @class = "form-control", @placeholder = Html.DisplayNameFor(x => x.providerAccountVM.SWIFT) })
                @Html.ValidationMessageFor(m => m.providerAccountVM.SWIFT, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.providerAccountVM.Address, htmlAttributes: new { @class = "control-label col-sm-2 required" })
            <div class="col-sm-4">
                @Html.TextBoxFor(m => m.providerAccountVM.Address, new { @class = "form-control", @placeholder = Html.DisplayNameFor(x => x.providerAccountVM.Address) })
                @Html.ValidationMessageFor(m => m.providerAccountVM.Address, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
</div>
