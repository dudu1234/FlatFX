@model FlatFXWebClient.ViewModels.RegisterProviderAccountViewModel
<div class="panel panel-info">
    <div class="panel-heading">
        <h4 class="panel-title">@FlatFXResources.Resources.BankAccountDetails</h4>
    </div>
    <div class="panel-body">
        <div class="form-group">
            @Html.LabelFor(m => m.ProviderId, htmlAttributes: new { @class = "control-label" })
            @Html.DropDownListFor(m => m.ProviderId,
                            new SelectList(ViewBag.ProviderList as Dictionary<string, string>, "Key", "Value"), htmlAttributes: new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.TextBoxFor(m => m.AccountName, new { @class = "form-control", @placeholder = Html.DisplayNameFor(x => x.AccountName) })
        </div>
        <div class="form-group">
            @Html.TextBoxFor(m => m.AccountFullName, new { @class = "form-control", @placeholder = Html.DisplayNameFor(x => x.AccountFullName) })
        </div>
        <div class="form-group">
            @Html.TextBoxFor(m => m.BranchNumber, new { @class = "form-control", @placeholder = Html.DisplayNameFor(x => x.BranchNumber) })
        </div>
        <div class="form-group">
            @Html.TextBoxFor(m => m.AccountNumber, new { @class = "form-control", @placeholder = Html.DisplayNameFor(x => x.AccountNumber) })
        </div>
        <div class="form-group">
            @Html.TextBoxFor(m => m.Address, new { @class = "form-control", @placeholder = Html.DisplayNameFor(x => x.Address) })
        </div>
        <div class="form-group">
            @Html.TextBoxFor(m => m.IBAN, new { @class = "form-control", @placeholder = Html.DisplayNameFor(x => x.IBAN) })
        </div>
        <div class="form-group">
            @Html.TextBoxFor(m => m.SWIFT, new { @class = "form-control", @placeholder = Html.DisplayNameFor(x => x.SWIFT) })
        </div>
    </div>
</div>
