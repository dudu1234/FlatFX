@model IEnumerable<FlatFXCore.Model.Data.Provider>

@{
    ViewBag.Title = "Provider List";
}

<div class="col-xs-1"></div>
<div class=" col-xs-10 panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Provider List</h3>
    </div>
    <div class="panel-body table-responsive">
        <p>
            @Html.ActionLink("Create New Provider", "Create")
        </p>
        <table class="table table-bordered table-hover table-striped">
            <thead>
                <tr class="info">
                    <th>
                        @Html.DisplayNameFor(model => model.ShortName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FullName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsActive)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ProviderType)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.QuoteResponse_Enabled)
                    </th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ShortName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsActive)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProviderType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.QuoteResponse_Enabled)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.ProviderId }) |
                            @Html.ActionLink("Details", "Details", new { id = item.ProviderId }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.ProviderId })
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>
<div class="col-xs-1"></div>
