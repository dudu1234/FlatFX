@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()
    <li class="dropdown site-menu">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span class="glyphicon glyphicon-user"></span> @User.Identity.GetUserName().ToShortString(12)<span class="caret"></span></a>
        <ul class="dropdown-menu login-dropdown">
            <li>@Html.ActionLink(@FlatFXResources.Resources.UserManage, "UserIndex", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })</li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()"><span class="glyphicon glyphicon-log-out"></span> @FlatFXResources.Resources.Signout</a></li>
        </ul>
    </li>
    }
}
else
{
    <div class="btn-group site-header-login-group">
        <a class="btn btn-danger btn-xs" href="@Url.Action("RegisterAll", "Account")">@FlatFXResources.Resources.Registration</a>
        <a class="btn btn-success btn-xs" href="@Url.Action("Login", "Account")">@FlatFXResources.Resources.EnterPrivateZone</a>
    </div>

