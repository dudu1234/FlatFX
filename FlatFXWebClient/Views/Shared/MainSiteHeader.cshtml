                        @*<li role="separator" class="divider"></li>*@
                    </ul>
                </li>

                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Admin Manage<span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li><a href="@Url.Action("IndexAdmin", "ApplicationUsers")">Edit Users</a></li>
                        <li><a href="@Url.Action("IndexAdmin", "Companies")">Edit Companies</a></li>
                        <li><a href="@Url.Action("Index", "CompanyAccounts")">Edit Company Accounts</a></li>
                        <li><a href="@Url.Action("Index", "ProviderAccounts")">Edit Provider Accounts</a></li>
                        <li><a href="@Url.Action("Index", "Providers")">Edit Providers</a></li>
                        <li><a href="@Url.Action("Index", "Roles")">Edit Roles</a></li>
                        <li role="separator" class="divider"></li>
                        <li><a href="@Url.Action("Index", "Log")">View Log Information</a></li>

                    </ul>
                </li>
            </ul>

            <ul class="nav navbar-nav navbar-right padding-header">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                        <span class="caret">
                            @if (culture == "he-IL")
                            {
                                <img src="~/Images/israel_flag_16.png" alt="Hebrew">;
                            }
                            else
                            {
                                <img src="~/Images/usa-flag-16.gif" alt="English">
                            }
                        </span>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href="@Url.Action("Index", "Home", new { lang = "he-IL" })"><img src="~/Images/israel_flag_16.png" alt="Hebrew"></a></li>
                        <li><a href="@Url.Action("Index", "Home", new { lang = "en-US" }) "><img src="~/Images/usa-flag-16.gif" alt="English"></a></li>
                    </ul>
                </li>

                <li>
                    @Html.Partial("_LoginPartial")
                </li>
            </ul>
        </div><!-- /.navbar-collapse -->
