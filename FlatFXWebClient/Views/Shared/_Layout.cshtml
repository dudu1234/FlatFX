@using FlatFXCore.BussinessLayer;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="~/Images/FlatFXIcon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/noty")

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ng-table/0.8.3/ng-table.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/ng-table/0.8.3/ng-table.min.js"></script>

    @{
        if (System.Threading.Thread.CurrentThread.CurrentCulture.TextInfo.IsRightToLeft)
        {
            @Styles.Render("~/bundles/RightToLeft1css")
        }
    }

    <script src="~/Scripts/Chart.min.js"></script>
    <script src="~/JS/Functions/Charts.js"></script>
    <script src="~/JS/Functions/fcsaNumber.js"></script>

    @Styles.Render("~/bundles/FFXcss1")
    @Styles.Render("~/bundles/FFXcss2")
    @Scripts.Render("~/bundles/FFXjs")

    @{
        if (System.Threading.Thread.CurrentThread.CurrentCulture.TextInfo.IsRightToLeft)
        {
            @Styles.Render("~/bundles/FFXcssRtl")
            @Scripts.Render("~/bundles/FFXjsRtl")
        }
    }

    @*@Scripts.Render("~/bundles/FFXControllers")*@
    <script src="~/JS/Controllers/AllControllers.js"></script>
</head>
<body ng-app="FlatFXAPP">
    <div class="row clearfix">
        <div id="nav" class="col-xs-12">
            @Html.Partial("MainSiteHeader")
        </div>
    </div>
    <div class="row clearfix">
        <div class="col-xs-12" id="body">
            @RenderBody()
        </div>
    </div>
    <div id="footer" class="row clearfix navbar navbar-default navbar-fixed-bottom">
        <div id="footer2" class="row clearfix">
            <div id="nav" class="col-xs-5 col-xs-offset-0 col-md-3 col-md-offset-1">
                <b>@FlatFXResources.Resources.Product</b><br />
                @*<a href="@Url.Action("Index", "Home")#Movie">@FlatFXResources.Resources.MenuMovie</a><br />*@
                <a href="@Url.Action("Index", "Home")#HowItWorks">@FlatFXResources.Resources.MenuHowItWorks</a><br />
                <a href="@Url.Action("Index", "Home")#About">@FlatFXResources.Resources.MenuAbout</a><br />
                <a href="@Url.Action("ShowRates", "OnLineFXRates")">@FlatFXResources.Resources.OnLineRates<span class="glyphicon glyphicon-usd white"></span><span class="glyphicon glyphicon-euro white"></span></a><br />
                @if (User.Identity.Name != "")
                {
                    <a href="@Url.Action("EnterData", "SimpleCurrencyExchange")">@FlatFXResources.Resources.ExchangeSystem<span class="glyphicon glyphicon-transfer white"></span></a>
                }
            </div>
            @if (User.IsInRole(Consts.Role_Administrator) || User.IsInRole(Consts.Role_CompanyUser) || User.IsInRole(Consts.Role_ProviderUser))
            {
                <div id="nav" class="col-xs-6 col-xs-offset-1 col-md-3 col-md-offset-0">
                    <b>@FlatFXResources.Resources.UserManage</b><br />
                    <a href="@Url.Action("UserIndex", "Manage")">@FlatFXResources.Resources.UserManage</a><br />
                    <a href="@Url.Action("EditByUser", "ApplicationUsers")">@FlatFXResources.Resources.EditUserDetails</a><br />
                    <a href="@Url.Action("IndexUser", "Companies")">@FlatFXResources.Resources.EditCompanyDetails</a><br />
                </div>
            }

            <div id="nav" class="col-xs-7 col-xs-offset-0 col-md-pull-1 col-md-4 col-md-offset-0 col-md-pull-1">
                <b>@FlatFXResources.Resources.ContactUs</b>
                <script src="//platform.linkedin.com/in.js" type="text/javascript"></script>
                <script type="IN/CompanyProfile" data-id="10535460" data-format="hover">
                </script><br />
                <a href="#">@FlatFXResources.Resources.OfficePhone: 0548-036601</a><br />
                <a href="mailto:info@FlatFX.com">@FlatFXResources.Resources.Email: info@FlatFX.com</a><br />
                <a href="#">@FlatFXResources.Resources.Address: Ramat Gan, Israel</a><br />
            </div>
        </div>
        <div class="row clearfix copyright">
            <div id="nav" class="col-xs-offset-0 col-xs-12 col-md-offset-1 col-md-11 text-left">&nbsp;&nbsp;Copyright © 2015 FlatFX Limited</div>
        </div>
    </div>
</body>


</html>
