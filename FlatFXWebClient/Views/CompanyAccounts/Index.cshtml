@model IEnumerable<FlatFXCore.Model.Data.CompanyAccount>

@{
    Layout = "~/Views/Manage/AdminManageLayout.cshtml";
}

<div class="form-horizontal">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">Company Accounts</h3>
        </div>
        <div class="panel-body table-responsive">
            <table class="table table-bordered table-hover table-striped ffx-table">
                <tr>
                    <th>
                        Company Short Name
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AccountName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AccountFullName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsActive)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Balance)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Equity)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DailyPNL)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.GrossPNL)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Company.CompanyShortName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AccountName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AccountFullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsActive)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Balance)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Equity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DailyPNL)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.GrossPNL)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.CompanyAccountId }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.CompanyAccountId })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>