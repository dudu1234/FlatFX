@model IEnumerable<FlatFXCore.Model.Data.CompanyAccount>

@{
    Layout = "~/Views/Manage/UserManageLayout.cshtml";
}

<div class="form-horizontal">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">Company Accounts</h3>
        </div>
        <div class="panel-body table-responsive">
            <table class="table table-bordered table-hover table-striped ffx-table">
                <tr>
                    <th>
                        Company Short Name
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AccountName)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Company.CompanyShortName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AccountName)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "EditByUser", new { id = item.CompanyAccountId })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>