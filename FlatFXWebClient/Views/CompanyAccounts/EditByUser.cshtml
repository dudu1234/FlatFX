@model FlatFXCore.Model.Data.CompanyAccount

@{
    ViewBag.Title = "Edit company account";
    Layout = "~/Views/Manage/UserManageLayout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-horizontal">
            <div class="panel panel-danger">
                <div class="panel-heading">
                    <h3 class="panel-title">@FlatFXResources.Resources.EditCompanyAccount</h3>
                </div>
                <div class="panel-body">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.CompanyAccountId)

                    <div class="form-group">
                        @Html.LabelFor(model => model.Company.CompanyName, htmlAttributes: new { @class = "control-label col-sm-2" })
                        <div class="col-sm-4">
                            @Html.EditorFor(model => model.Company.CompanyName, new { htmlAttributes = new { @disabled = true, @readonly = "readonly", @class = "form-control" } })
                        </div>

                        @Html.LabelFor(model => model.AccountName, htmlAttributes: new { @class = "control-label col-sm-2" })
                        <div class="col-sm-4">
                            @Html.EditorFor(model => model.AccountName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.AccountName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.IsActive, htmlAttributes: new { @class = "control-label col-sm-2" })
                        <div class="col-sm-4 checkbox">
                            @Html.EditorFor(model => model.IsActive, new { htmlAttributes = new { @disabled = true, @readonly = "readonly", @class = "form-control" } })
                        </div>

                        @Html.LabelFor(model => model.IsDefaultAccount, htmlAttributes: new { @class = "control-label col-sm-2" })
                        <div class="col-sm-4 checkbox">
                            @Html.EditorFor(model => model.IsDefaultAccount)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-4">
                            <input type="submit" value="@FlatFXResources.Resources.Save" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<br /><br />
<div>
    <a class="btn btn-success" href="@Url.Action("IndexUser")">@FlatFXResources.Resources.BackToList</a>
</div>
<br />
